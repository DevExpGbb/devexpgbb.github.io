{
  "name": "‚ö°Ô∏è Astro Node 22 üåå",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-22-bookworm",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  // pnpm feature removed due to GHCR resolution issues; using node feature + corepack pnpm
  "features": {
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/copilot-cli:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "astro-build.astro-vscode",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "github.copilot"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        "npm.packageManager": "pnpm"
      }
    }
  },
  "forwardPorts": [4321],
  "portsAttributes": {
    "4321": {
      "label": "‚ö° Astro Dev Server",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "corepack enable && corepack prepare pnpm@latest --activate && if [ -f package.json ]; then pnpm install; else echo '‚ÑπÔ∏è package.json not found, skipping pnpm install'; fi",
  "remoteUser": "node"
}
