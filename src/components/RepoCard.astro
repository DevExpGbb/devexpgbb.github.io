---
import type { CategorizedRepository } from '../utils/categorize';
import { formatDate, getTopLanguages } from '../utils/categorize';
import Avatar from './Avatar.astro';
import CategoryBadge from './CategoryBadge.astro';
import LanguageBadge from './LanguageBadge.astro';

interface Props {
  repo: CategorizedRepository;
}

const { repo } = Astro.props;
const topLanguages = getTopLanguages(repo, 2);
const updatedDate = formatDate(repo.updatedAt);
---

<a 
  href={repo.url}
  target="_blank"
  rel="noopener noreferrer"
  class:list={[
    'group relative flex flex-col bg-white rounded-2xl p-5 shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border border-gray-100',
    { 'opacity-60': repo.isArchived }
  ]}
>
  {/* Archived badge */}
  {repo.isArchived && (
    <div class="absolute top-3 right-3">
      <span class="text-xs px-2 py-0.5 bg-gray-200 text-gray-600 rounded-full font-medium">
        Archived
      </span>
    </div>
  )}

  {/* Header: Category + Stars */}
  <div class="flex items-center justify-between mb-3">
    <CategoryBadge category={repo.categoryInfo} />
    {repo.stargazerCount > 0 && (
      <div class="flex items-center gap-1 text-sm text-gray-500">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
        <span>{repo.stargazerCount}</span>
      </div>
    )}
  </div>

  {/* Title */}
  <h3 class="font-bold text-lg text-gray-900 group-hover:text-blue-600 transition-colors mb-2 line-clamp-1">
    {repo.name}
  </h3>

  {/* Description */}
  <p class="text-sm text-gray-600 mb-4 line-clamp-2 flex-grow min-h-[2.5rem]">
    {repo.description || 'No description provided'}
  </p>

  {/* Languages */}
  {topLanguages.length > 0 && (
    <div class="flex flex-wrap gap-3 mb-4">
      {topLanguages.map(lang => (
        <LanguageBadge name={lang} />
      ))}
    </div>
  )}

  {/* Footer: Contributor + Updated */}
  <div class="flex items-center justify-between pt-3 border-t border-gray-100">
    {repo.topContributor ? (
      <Avatar login={repo.topContributor.login} size="sm" />
    ) : (
      <Avatar login={repo.owner.login} size="sm" />
    )}
    <span class="text-xs text-gray-400">
      Updated {updatedDate}
    </span>
  </div>

  {/* Hover arrow */}
  <div class="absolute bottom-5 right-5 opacity-0 group-hover:opacity-100 transition-opacity">
    <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
    </svg>
  </div>
</a>
