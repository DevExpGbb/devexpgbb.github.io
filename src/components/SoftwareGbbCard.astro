---
export interface SoftwareGbb {
  login: string;
  id: number;
  avatarUrl: string;
  profile: {
    name: string | null;
    bio: string | null;
    company: string | null;
    location: string | null;
    twitterUsername: string | null;
    websiteUrl: string | null;
  };
  totalContributions: number;
  repositoriesContributed: string[];
  repositoryCount: number;
}

interface Props {
  member: SoftwareGbb;
  rank?: number;
}

const { member, rank } = Astro.props;
const displayName = member.profile.name || member.login;

// Top 3 get special styling
const isTopContributor = rank && rank <= 3;
const medalEmojis: Record<number, string> = { 1: 'ðŸ¥‡', 2: 'ðŸ¥ˆ', 3: 'ðŸ¥‰' };
---

<a
  href={`https://github.com/${member.login}`}
  target="_blank"
  rel="noopener noreferrer"
  class:list={[
    'group relative flex flex-col bg-white rounded-xl p-3 shadow-sm hover:shadow-lg transition-all duration-300 hover:-translate-y-1 border overflow-hidden',
    isTopContributor ? 'border-amber-200 bg-gradient-to-br from-amber-50/50 to-white' : 'border-gray-100/80'
  ]}
>
  {/* Rank badge */}
  {isTopContributor && rank && (
    <div class="absolute top-2 right-2 text-lg">
      {medalEmojis[rank]}
    </div>
  )}

  {/* Header: Avatar + Name */}
  <div class="flex items-center gap-2.5 mb-2">
    <img
      src={member.avatarUrl}
      alt={member.login}
      class:list={[
        'w-10 h-10 rounded-full shadow-sm',
        isTopContributor ? 'ring-2 ring-amber-300' : 'ring-1 ring-gray-200'
      ]}
      loading="lazy"
    />
    <div class="flex-1 min-w-0">
      <h3 class="text-sm font-bold text-gray-900 truncate group-hover:text-blue-600 transition-colors">
        {displayName}
      </h3>
      <p class="text-xs text-gray-500">@{member.login}</p>
    </div>
  </div>

  {/* Stats */}
  <div class="flex items-center gap-2 mb-2">
    <div class="flex items-center gap-1 px-2 py-1 bg-green-50 rounded-full">
      <svg class="w-3 h-3 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <span class="text-xs font-bold text-green-700">{member.totalContributions}</span>
    </div>
    <div class="flex items-center gap-1 px-2 py-1 bg-blue-50 rounded-full">
      <svg class="w-3 h-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
      </svg>
      <span class="text-xs font-bold text-blue-700">{member.repositoryCount}</span>
    </div>
  </div>

  {/* Location */}
  {member.profile.location && (
    <div class="flex items-center gap-1 text-xs text-gray-400 mt-auto">
      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
      <span class="truncate">{member.profile.location}</span>
    </div>
  )}

  {/* Repos contributed - tooltip on hover */}
  {member.repositoryCount > 0 && (
    <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-gray-900/95 to-gray-900/80 text-white p-3 translate-y-full group-hover:translate-y-0 transition-transform duration-300">
      <p class="text-xs font-semibold mb-1.5 text-gray-300">Contributed to:</p>
      <div class="flex flex-wrap gap-1">
        {member.repositoriesContributed.slice(0, 4).map(repo => (
          <span class="text-xs px-1.5 py-0.5 bg-white/10 rounded">{repo}</span>
        ))}
        {member.repositoryCount > 4 && (
          <span class="text-xs px-1.5 py-0.5 bg-white/10 rounded">+{member.repositoryCount - 4}</span>
        )}
      </div>
    </div>
  )}
</a>
