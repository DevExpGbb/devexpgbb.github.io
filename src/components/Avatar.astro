---
interface Props {
  login: string;
  size?: 'xs' | 'sm' | 'md' | 'lg';
  showName?: boolean;
}

const { login, size = 'sm', showName = false } = Astro.props;

const sizeClasses = {
  xs: 'w-5 h-5',
  sm: 'w-6 h-6',
  md: 'w-8 h-8',
  lg: 'w-10 h-10',
};

const textSizeClasses = {
  xs: 'text-[10px]',
  sm: 'text-xs',
  md: 'text-sm',
  lg: 'text-sm',
};

// GitHub avatar URL
const avatarUrl = `https://github.com/${login}.png?size=64`;
---

<div class="flex items-center gap-1.5" title={login}>
  <img
    src={avatarUrl}
    alt={`${login}'s avatar`}
    class={`${sizeClasses[size]} rounded-full ring-1 ring-white shadow-sm`}
    loading="lazy"
  />
  {showName && (
    <span class={`${textSizeClasses[size]} text-gray-500 font-medium truncate max-w-[60px]`}>
      @{login}
    </span>
  )}
</div>
