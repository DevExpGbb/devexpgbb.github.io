---
import type { AssetCategoryInfo } from '../utils/categorize';

interface Props {
  category: AssetCategoryInfo;
  size?: 'xs' | 'sm' | 'md';
}

const { category, size = 'sm' } = Astro.props;

const sizeClasses = {
  xs: 'text-[10px] px-1.5 py-0.5',
  sm: 'text-xs px-2 py-0.5',
  md: 'text-sm px-3 py-1',
};

const emojiSizes = {
  xs: 'text-xs',
  sm: 'text-sm',
  md: 'text-base',
};
---

<span class={`inline-flex items-center gap-1 font-medium rounded-md ${category.bgColor} ${category.color} ${sizeClasses[size]}`}>
  <span class={`${emojiSizes[size]} leading-none`}>{category.emoji}</span>
  <span>{category.label}</span>
</span>
