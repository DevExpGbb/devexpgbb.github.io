---
import type { CategoryInfo } from '../utils/categorize';

interface Props {
  category: CategoryInfo;
  size?: 'sm' | 'md';
}

const { category, size = 'sm' } = Astro.props;

const sizeClasses = {
  sm: 'text-xs px-2.5 py-1',
  md: 'text-sm px-3 py-1.5',
};
---

<span class={`inline-flex items-center gap-1.5 font-semibold rounded-lg ${category.bgColor} ${category.color} ${sizeClasses[size]} shadow-sm`}>
  <span class="text-base leading-none">{category.emoji}</span>
  <span>{category.label}</span>
</span>
