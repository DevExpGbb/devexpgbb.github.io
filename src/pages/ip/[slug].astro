---
import { getCollection, type CollectionEntry } from 'astro:content';

type IPEntry = CollectionEntry<'ip'>;

export async function getStaticPaths() {
  const entries = await getCollection('ip', ({ data }) => data.published);
  return entries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props as { entry: IPEntry };
const { Content } = await entry.render();
const { data } = entry;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{data.title} | IP Atlas</title>
  </head>
  <body>
    <main>
      <a href="/">‚Üê Volver</a>
      <article>
        <header>
          <h1>{data.title}</h1>
          <p>{data.summary}</p>
          <div class="meta">
            <span class="category">{data.category}</span>
            {data.date && (
              <time datetime={data.date.toISOString()}>
                {data.date.toLocaleDateString('es-ES')}
              </time>
            )}
            {data.tags.length > 0 && <span>{data.tags.join(' ¬∑ ')}</span>}
          </div>
        </header>
        <Content content={entry} />
        {data.link && (
          <p class="external">
            üîó Enlace: <a href={data.link} target="_blank" rel="noreferrer">{data.link}</a>
          </p>
        )}
      </article>
    </main>
  </body>
</html>

<style>
  :root {
    color-scheme: only light;
  }
  body {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    margin: 0;
    padding: 2.5rem 1.5rem 3rem;
    background: #f6f6f9;
    color: #1b1b1f;
  }
  main {
    max-width: 760px;
    margin: 0 auto;
  }
  a {
    color: #5a35ff;
    text-decoration: none;
    font-weight: 600;
  }
  article {
    background: white;
    padding: 2.5rem;
    border-radius: 1.25rem;
    box-shadow: 0 16px 40px rgba(15, 23, 42, 0.08);
    margin-top: 1.5rem;
  }
  header {
    margin-bottom: 2rem;
  }
  h1 {
    margin: 0 0 0.5rem;
    font-size: clamp(2rem, 4vw, 2.6rem);
  }
  p {
    margin: 0;
  }
  .meta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    font-size: 0.9rem;
    color: #555;
    margin-top: 0.75rem;
  }
  .category {
    font-weight: 600;
  }
  .external {
    margin-top: 2rem;
  }
</style>
