---
import Layout from '../layouts/Layout.astro';
import ContributorCard from '../components/ContributorCard.astro';
import { processContributors } from '../utils/processContributors';

// Import raw data
import contributorsData from '../data/contributors.json';

// Process contributors
const contributors = processContributors(contributorsData);
const stats = {
  total: contributors.length,
  totalContributions: contributors.reduce((sum, c) => sum + c.totalContributions, 0),
  totalRepos: contributorsData.totalRepositories
};
---

<Layout
  title="Team Contributors - IP Atlas"
  description="Meet the people making DevExpGbb possible"
>
  <main class="max-w-7xl mx-auto px-4 py-12">
    <!-- Hero Section -->
    <header class="text-center mb-12">
      <h1 class="text-5xl font-bold text-gray-900 mb-4">
        ðŸ‘¥ Team Contributors
      </h1>
      <p class="text-xl text-gray-600 mb-8">
        Meet the people making DevExpGbb possible
      </p>

      <!-- Stats -->
      <div class="flex justify-center gap-4 flex-wrap">
        <div class="bg-white px-6 py-3 rounded-full shadow-sm border border-gray-100">
          <span class="text-2xl font-bold text-blue-600">{stats.total}</span>
          <span class="text-sm text-gray-600 ml-2">contributors</span>
        </div>
        <div class="bg-white px-6 py-3 rounded-full shadow-sm border border-gray-100">
          <span class="text-2xl font-bold text-green-600">{stats.totalContributions}</span>
          <span class="text-sm text-gray-600 ml-2">contributions</span>
        </div>
        <div class="bg-white px-6 py-3 rounded-full shadow-sm border border-gray-100">
          <span class="text-2xl font-bold text-purple-600">{stats.totalRepos}</span>
          <span class="text-sm text-gray-600 ml-2">repositories</span>
        </div>
      </div>
    </header>

    <!-- Contributors Grid -->
    <section>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {contributors.map((contributor) => (
          <ContributorCard contributor={contributor} />
        ))}
      </div>
    </section>
  </main>
</Layout>
