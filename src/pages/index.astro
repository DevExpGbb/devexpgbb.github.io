---
import { getCollection } from 'astro:content';

const items = (await getCollection('ip', ({ data }) => data.published)).sort(
	(a, b) => (b.data.date?.getTime() ?? 0) - (a.data.date?.getTime() ?? 0)
);
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>IP Atlas</title>
	</head>
	<body>
		<main>
			<header class="hero">
				<h1>IP Atlas</h1>
				<p>Catálogo de contenidos y material generado por el equipo.</p>
			</header>
			<section class="grid">
				{items.length === 0 ? (
					<p class="empty">No hay contenidos publicados todavía.</p>
				) : (
					items.map((item) => (
						<a class="card" href={`/ip/${item.slug}/`}>
							<h2>{item.data.title}</h2>
							<p>{item.data.summary}</p>
							<div class="meta">
								<span class="category">{item.data.category}</span>
								{item.data.date && (
									<time datetime={item.data.date.toISOString()}>
										{item.data.date.toLocaleDateString('es-ES')}
									</time>
								)}
								{item.data.tags.length > 0 && <span>{item.data.tags.join(' · ')}</span>}
							</div>
						</a>
					))
				)}
			</section>
		</main>
	</body>
</html>

<style>
	:root {
		color-scheme: only light;
	}
	body {
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
		margin: 0;
		background: #f6f6f9;
		color: #1b1b1f;
	}
	main {
		max-width: 1100px;
		margin: 0 auto;
		padding: 3rem 1.5rem 4rem;
	}
	.hero {
		margin-bottom: 2.5rem;
	}
	.hero h1 {
		margin: 0 0 0.5rem;
		font-size: clamp(2.2rem, 5vw, 3rem);
	}
	.hero p {
		margin: 0;
		font-size: 1.1rem;
		color: #555;
	}
	.grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
		gap: 1.5rem;
	}
	.card {
		background: white;
		padding: 1.75rem;
		border-radius: 1.25rem;
		box-shadow: 0 16px 40px rgba(15, 23, 42, 0.08);
		text-decoration: none;
		color: inherit;
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
		transition: transform 0.2s ease, box-shadow 0.2s ease;
	}
	.card:hover {
		transform: translateY(-4px);
		box-shadow: 0 24px 50px rgba(15, 23, 42, 0.12);
	}
	.card h2 {
		margin: 0;
		font-size: 1.3rem;
	}
	.card p {
		margin: 0;
		color: #444;
	}
	.meta {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
		font-size: 0.85rem;
		color: #555;
	}
	.category {
		font-weight: 600;
	}
	.empty {
		color: #666;
		font-size: 1.05rem;
	}
</style>
